<?xml version="1.0" encoding="utf-8"?>
<dialog width="500" height="600" title="Help">
	<tabview width="100%" height="100%">
		<box width="100%" text="Basics">
			<label text="No one's around to help." />
		</box>
		<box width="100%" text="Hotkeys">
			<tableview width="100%" height="510" contentWidth="100%">
				<header width="100%">
					<column id="action" text="Action" width="50%" />
					<column id="keybind" text="Keybind" width="50%" />
				</header>
				<data>
					<item action="Show User Guide" keybind="F1" />
					<item action="Pan" keybind="Middle Click and Drag" />
					<item action="Zoom" keybind="Scroll Wheel" />
					<item action="Previous Animation" keybind="Q/[" />
					<item action="Next Animation" keybind="E/]" />
					<item action="Replay Animation" keybind="Space" />
					<item action="Play Idle Animation" keybind="M" />
					<item action="Play Sing Animations" keybind="IJKL" />
					<item action="Nudge Offset" keybind="Arrow Keys" />
					<item action="Nudge Offset (Fast)" keybind="Shift + Arrows" />
					<item action="Nudge Offset (Precise)" keybind="Ctrl + Arrows" />
					<item action="Drag Offset" keybind="Left Click and Drag" />
					<item action="New Character" keybind="Ctrl + N" />
					<item action="Open Character" keybind="Ctrl + O" />
					<item action="Save Character Data" keybind="Ctrl + S" />
					<item action="Save Character As..." keybind="Ctrl + Shift + S" />
					<item action="Quit to Menu" keybind="Ctrl + Q" />
				</data>
			</tableview>
		</box>
	</tabview>
</dialog>
