<?xml version="1.0" encoding="utf-8"?>
<dialog width="800" height="500" title="Animation Editor - New Character">
	<!-- Body -->
	<hbox width="100%" height="100%">
		<card id="splashSectionLeft" width="33%" height="100%" text="Open Recent">
			<scrollview width="100%" height="50%" contentWidth="100%">
				<vbox width="100%" id="splashRecentContainer" />
			</scrollview>
			<button id="splashBrowse" text="Browse for Character" />
		</card>
		<card id="splashSectionCenter" width="33%" height="100%" text="Create New">
			<button id="splashCreateNewCharacter" text="New Character" />
		</card>
		<card id="splashSectionRight" width="33%" height="100%" text="Create From Song">
			<scrollview width="100%" height="100%" contentWidth="100%">
				<vbox width="100%" id="splashTemplateContainer" />
			</scrollview>
		</card>
	</hbox>
</dialog>
